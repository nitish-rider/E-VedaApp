<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".prabandham.Prabandham_Player">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/PlayerRvPP"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:layout_gravity="top"
        android:layout_weight="50"
        tools:listitem="@layout/player_recycler_view_item" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/gradient">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/player_file_namePP"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00:00"
                android:id="@+id/player_time_startPP"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <SeekBar
                android:id="@+id/seekBarPP"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:min="0"
                android:progressDrawable="@drawable/progress"
                android:thumb="@drawable/thumb"
                android:layout_gravity="center"
                android:max="100"
                android:progressTint="#000000"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00:00"
                android:id="@+id/player_time_endPP"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:gravity="center"
            android:layout_gravity="bottom">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="15dp"
                android:id="@+id/back10secPP"
                android:background="@drawable/back_10_sec" />

            <Button
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:id="@+id/play_buttonPP"
                android:visibility="visible"
                android:background="@drawable/play_icon" />

            <Button
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:id="@+id/pause_buttonPP"
                android:visibility="gone"
                android:background="@drawable/pause" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/forward10secPP"
                android:background="@drawable/forward_10_sec" />



        </LinearLayout>

    </LinearLayout>





</LinearLayout>