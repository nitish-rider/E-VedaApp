<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pradyumna.simhansapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"

        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".learn_veda.Veda_Player"
            android:label="@string/title_activity_learn_vedas"
            android:screenOrientation="portrait"

            android:parentActivityName=".learn_veda.Learn_Veda">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sthotas.Sthotras_Player"
            android:screenOrientation="portrait"

            android:parentActivityName=".sthotas.Sthotras" />
        <activity
            android:name=".prabandham.Prabandham_Player"
            android:parentActivityName=".prabandham.Prabandham" />
        <activity
            android:name=".splash.Splash1"
            android:label="@string/app_name"

            android:screenOrientation="portrait"
            android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".splash.Splash2"
            android:label="@string/title_activity_splash_screen2"
            android:screenOrientation="portrait"

            android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="pradyumna.simhansapp.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".prabandham.Prabandham"
            android:label="@string/title_activity_prabandham"
            android:screenOrientation="portrait"

            android:parentActivityName=".MainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feedback.Feedback"
            android:label="@string/title_activity_feedback"
            android:screenOrientation="portrait"

            android:parentActivityName=".MainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".contact.Contact"
            android:label="@string/title_activity_contact"
            android:screenOrientation="portrait"

            android:parentActivityName=".MainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data android:scheme="geo" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".instructions.Instructions"
            android:label="@string/title_activity_instructions"
            android:screenOrientation="portrait"

            android:parentActivityName=".MainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".learn_veda.Learn_Veda"
            android:label="@string/title_activity_veda_folders"
            android:screenOrientation="portrait"

            android:parentActivityName=".MainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".developers.Developers"
            android:label="@string/title_activity_developers"
            android:screenOrientation="portrait"

            android:parentActivityName=".MainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".about.About"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait"

            android:parentActivityName=".MainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sthotas.Sthotras"
            android:label="@string/title_activity_sthothram"
            android:screenOrientation="portrait"

            android:parentActivityName=".MainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".prateekas.Prateekas"
            android:label="@string/title_activity_prateekas"
            android:screenOrientation="portrait"

            android:parentActivityName=".MainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>